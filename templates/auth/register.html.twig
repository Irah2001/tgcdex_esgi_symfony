{% extends 'base.html.twig' %}

{% block title %}Register - PokéPack Explorer{% endblock %}

{% block body %}
<div class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-yellow-300 via-pink-400 to-red-400 overflow-hidden">
    <!-- Animated Pokéballs -->
    <div class="absolute top-0 left-0 w-48 h-48 bg-center bg-contain bg-no-repeat opacity-20 animate-bounce" 
         style="background-image: url('https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Pokebola-pokeball-png-0.png/601px-Pokebola-pokeball-png-0.png');">
    </div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-center bg-contain bg-no-repeat opacity-20 animate-spin-slow" 
         style="background-image: url('https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Pokebola-pokeball-png-0.png/601px-Pokebola-pokeball-png-0.png');">
    </div>

    <!-- Main Content -->
    <div class="z-10 text-center px-6 py-10 space-y-8 max-w-md bg-white bg-opacity-80 rounded-xl shadow-2xl">
        <!-- Title -->
        <h1 class="text-4xl font-extrabold text-yellow-600 tracking-wider drop-shadow-md">
            Register
        </h1>

        <!-- Flash Messages -->
        {% for flash_error in app.flashes('register_error') %}
            <div class="p-3 bg-red-100 border-l-4 border-red-500 text-red-700" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <!-- Form Errors -->
        {% if form_errors(registrationForm) %}
            <div class="p-3 bg-red-100 border-l-4 border-red-500 text-red-700"  role="alert">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        <!-- Registration Form -->
        <div>
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                <div class="text-left">
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-yellow-700 font-bold mb-2">Email:</label>
                    <input
                        name="{{ field_name(registrationForm.email) }}"
                        value="{{ field_value(registrationForm.email) }}"
                        required
                        class="w-full px-3 py-2 border border-yellow-600 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500"
                    >
                </div>

                <div class="text-left">
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-yellow-700 font-bold mb-2">Password:</label>
                    <input
                        name="{{ field_name(registrationForm.plainPassword) }}"
                        value="{{ field_value(registrationForm.plainPassword) }}"
                        label="Password"
                        type="password"
                        required
                        class="w-full px-3 py-2 border border-yellow-600 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500"
                    >
                </div>

                <button type="submit" 
                        class="mt-4 inline-block text-lg font-bold uppercase px-6 py-3 rounded-full shadow-lg 
                               bg-yellow-400 text-yellow-900 hover:bg-yellow-500 transition-all 
                               transform hover:-translate-y-1 hover:scale-105">
                    Register
                </button>
            {{ form_end(registrationForm) }}
        </div>

        <!-- Login Link -->
        <div class="mt-4">
            <p class="text-gray-700">Already have an account? 
                <a href="{{ path('auth_login') }}" class="text-blue-600 hover:underline">Login here</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
    .animate-spin-slow {
        animation: spin-slow 20s linear infinite;
    }
</style>
{% endblock %}
